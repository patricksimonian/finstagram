
           <header>
             <h1>Add a kitty yay!!</h1>
           </header>
           <main role="main">
             <p>add kitten details below</p>
             <form action="/owners/<%= @owner.id %>/kittens" method="POST">

                 <div class="form-group">
                    <label for="kitten_name">Name</label>
                    <input type="text" name="kitty" id="kitten_name" minlength="2">
                 </div>
                 
                 <div class="form-group">
                    <label for="kitten_breed">Breed</label>
                    <input type="text" name="breed" id="kitten_breed" minlength="4">
                 </div>
                 
                 <div class="form-group">
                     <input type="submit" name="submit" value="Add a kitty..:)">
                 </div>
             </form>

             <footer>
                 <a href="/owners/<%= @owner.id %>">back to my profile</a>
             </footer>
           </main>