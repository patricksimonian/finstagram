
      <header class="owners-header">
         <h1>Kitty Owners</h1>
         <a href="/owners/new">Sign up as an owner</a>
         <a href="/owners/login"> Or Login</a>
      </header>

      <main role="main">
         <% if @owners.length > 0 %>
             <% @owners.each do |owner| %>
               <a href="/owners/<%=owner.id %>">Profile</a>
              <article class="post">
                  <div class="user-info">
                      <h2>Name: <%= owner.name %></h2>
                      <h3>Age: <%= owner.age %></h3>
                  </div>
                  <ul class="comments">
                     <h4> My kittens</h4>
                     <!-- does owner have kittens?-->
                     <% if owner.kittens.length > 0 %>
                         <% owner.kittens.each do |kitty| %>
                          <li>
                              <p>Name: <%= kitty.name %></p>
                              <p>Breed: <%= kitty.breed %></p>
                          </li>
                          <% end %>
                     <% else %>
                        Sadly, I have no kittens to speak of. 
                     <% end %>
                  </ul>
              </article>
             <% end %>
            <% else %>
              No owners found :(
            <% end%>
      </main>