
           <header>
             <h1>Add a LOTR CHARACTER!!</h1>
           </header>
           <main role="main">
             <p>add some lotr characters below</p>
             <form action="/lotr_characters/create" method="POST">
                 <ul class="error">
                    <% if @lotr_character && @lotr_character.errors %>
                        <% @lotr_character.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    <% end %>
                 </ul>
                 <div class="form-group">
                     <label for="name">Character Name</label>
                     <input name="name" type="text" placeholder="character name" id="name">
                 </div>
                <div class="form-group">
                    <label for="icon_url">Icon Url</label>
                    <input type="text" name="icon_url" placeholder="http://something" id="icon_url">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" name="age" placeholder="age in numbers" id="age">
                </div>
                <div class="form-group">
                    <label for="race">Race</label>
                    <input type="text" name="race" placeholder="dwarf?" id="race" >
                </div>
                <div class="form-group">
                    <label for="has_beard">Has a beard?
                        <input type="checkbox" id="has_beard" name="has_beard">
                    </label>
                </div>
                 <div class="form-group">
                     <button>Submit</button>
                 </div>
             </form>
             <div class="img-preview">
                 <img id="lotr-preview" src="" alt="no preview">
             </div>
             <footer>
                 <a href="/lotr_characters">View FanPage</a>
             </footer>
           </main>