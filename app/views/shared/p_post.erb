<article class="post">

  <div class="user-info">
      <img src="<%= post.user.avatar_url %>" alt="<%= post.user.username %>">
      <h2><%= post.user.username %></h2>
      <h3><%= post.humanized_time_ago %></h3>
  </div>
  <a href="/posts/<%= post.id %>" class="photo">
      <img src="<%= post.photo_url %>" alt="post from <%= post.user.username %>">
  </a>
  <div class="actions">
      <%= post.like_count %> likes
      <u class="comment-count"><%= post.comment_count %> comments</span>
  </div>
  <% if current_user && allow_new_comment %>
    <%= erb(:"shared/p_new_comment", {locals: {post: post}}) %>
  <% end %>
  <ul class="comments">
     <% post.comments.each do |comment| %>
       <%= erb(:"/shared/p_comment", {locals: {comment: comment}}) %>
      <% end %>
  </ul>
</article>